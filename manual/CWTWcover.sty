\setlength{\textheight}{23cm}

\def\nothanks{\gdef\thanks##1{}}	% no thanks on cover page

\newenvironment{coverpage}%
	{\begin{titlepage}\maketitlepage
	 \vbox to 12cm
		\bgroup		% start vbox below window
 	 \vfil			% Vertical space after window.
	 \begin{center}  % Computer Science for both TW and CW         ronald 6/1/98
   	   {\large Department of Computer Science, K.U.Leuven} %       ade 14/12/94
	 \end{center}
	 \vfil }%
	{	\egroup		% end of vbox below window
	 \end{titlepage}}

\hoffset=-0.465cm		% to get box in window of cover
\def\maketitlepage{\par		% everything above abstract
 \begingroup
   \newpage\bgroup\def\thanks##1{}\@maketitlepage\@makelogo\egroup 
   \def\thefootnote{\fnsymbol{footnote}}
   \newpage\thispagestyle{empty}
	\bgroup\let\fbox\relax\@maketitlepage \@thanks\egroup    % repeat but no fbox
  \endgroup }

\newfont{\kul}{kullogo}    %ade 14/12/94

\def\@makelogo{\vskip 8cm  % \@makelogo added ade 14/12/94
  \raisebox{7mm}{\hfil\kul n\hfil} % kullogo
  \kern5mm
  \makebox[8cm][l]{%
	\vbox to 20mm{%
	      \hbox{\huge\sf Katholieke Universiteit Leuven\hfil}
		\vfil
              \hbox{\LARGE\sf Department of Computer Science\hfil}
		\vfil
              \hbox{\large\sf Celestijnenlaan 200A --
                                  B-3001 Heverlee (Belgium)\hfil}}
  } % end makebox
 } % end @makelogo

\def\@maketitlepage{\newpage
 \null
 \vskip 1.7cm			% Vertical space above title box.
\begin{center}\hbox{\fbox{%	% frame the title instead of window% ade 14/12/94
 \vbox to 6.5cm{		% this box corresponds to window in cover
       \vfil			% centers vertically better % ade 14/12/94
   \begin{minipage}[t]{12cm}	% titlebox is 12cm wide.
     \begin{center}
       {\LARGE\bf\@title\par}	% Title set in \LARGE size.
     \end{center}
   \end{minipage}		% minipage handles breaking of lines
       \vfil			% vfil up space in titlebox
     \begin{center}
       {\Large\em		% each author set in \Large, in a
        \lineskip .5em		% tabular environment
        \begin{tabular}[t]{c}\@author \end{tabular}\par
       }
       \vfil			% vfil up space in titlebox
       {\Large\em \@CWTW, \@date \par}
     \end{center}
	\vfil			% centers vertically better % ade 14/12/94
 }}}				% end of vbox} fbox} hbox}
\end{center}
\setcounter{footnote}{0}        % reset footnote counter (ronald, Sep 23, 1993)
}				% end of \@maketitlepage


